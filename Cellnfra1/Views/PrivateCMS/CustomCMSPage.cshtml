@{
    Layout = null;
}
@model IEnumerable<Cellnfra1.Models.tbl_PostContent>

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <title>CMS Dashboard</title>

    <!-- Bootstrap 5.3 CDN -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
</head>
<body class="bg-light">

    <div class="container py-4">

        <!-- Header -->
        <div class="d-flex justify-content-between align-items-center mb-4">
            <h2 class="fw-bold">📄 CMS Dashboard</h2>

            <form asp-action="Logout" asp-controller="Login">
                <button type="submit" class="btn btn-outline-danger btn-sm">
                    Logout
                </button>
            </form>
        </div>

        <!-- Create Button -->
        <div class="mb-3 text-end">
            <a class="btn btn-success" href="/PrivateCMS/Create">
                + Create New Post
            </a>
        </div>

        <!-- Posts Table -->
        <div class="card shadow-sm">
            <div class="card-header bg-primary text-white">
                <strong>Content List</strong>
            </div>

            <div class="card-body p-0">
                <table class="table table-striped table-hover mb-0 text-center align-middle">
                    <thead class="table-light">
                        <tr>
                            <th>Pages And Divs</th>
                            <th>Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        @if (Model.Any())
                        {
                            foreach (var item in Model)
                            {
                                <tr>
                                    <td class="text-start text-center ps-4">
                                        <strong>@item.Slug</strong>
                                        <div class="text-muted small">@item.DivSlug</div>
                                    </td>
                                    <td>
                                       @*  <a class="btn btn-sm btn-outline-primary me-1"
                                           href="/PrivateCMS/Details/@item.Id">
                                            View
                                        </a> *@
                                        <a class="btn btn-sm btn-outline-primary"
                                           asp-action="Edit"
                                           asp-controller="PrivateCMS"
                                           asp-route-id="@item.Id"
                                           >
                                            Edit
                                        </a>

                                        <a class="btn btn-sm btn-outline-danger"
                                           asp-action="Delete"
                                           asp-controller="PrivateCMS"
                                           asp-route-id="@item.Id"
                                           onclick="return confirm('Are you sure you want to delete this post?');">
                                            Delete
                                        </a>
                                    </td>
                                </tr>
                            }
                        }
                        else
                        {
                            <tr>
                                <td colspan="2" class="text-muted py-4">
                                    No posts found.
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>

    </div>

</body>
</html>
