@model Cellnfra1.Models.tbl_PostContent
@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <title>Edit Post</title>
    <meta name="viewport" content="width=device-width, initial-scale=1" />

    <!-- Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">

    <!-- Quill CSS -->
    <link href="https://cdn.quilljs.com/1.3.6/quill.snow.css" rel="stylesheet">

    <style>
        body {
            background-color: #f4f6f9;
        }

        .editor-card {
            background: #ffffff;
            border-radius: 12px;
            padding: 30px;
            box-shadow: 0 6px 18px rgba(0,0,0,0.08);
        }

        .ql-editor {
            min-height: 220px;
        }
    </style>
</head>

<body>

    <div class="container mt-1">
        <div class="row justify-content-center">
            <div class="col-lg-10">

                <div class="editor-card">
                    <h4 class="mb-4 text-primary fw-bold">Edit Post</h4>

                    <form asp-action="Update" method="post">
                        <input type="hidden" name="Id" value="@Model.Id" />

                        <!-- Row: Page + Section -->
                        <div class="row mb-3">
                            <div class="col-md-6">
                                <label class="form-label fw-semibold">Page</label>
                                <select class="form-select" name="Slug">
                                    <option value="">-- Select Page --</option>
                                    <option value="Home" selected="@(Model.Slug == "Home")">Home</option>
                                </select>
                            </div>

                            <div class="col-md-6">
                                <label class="form-label fw-semibold">Section</label>
                                <select class="form-select" name="DivSlug">
                                    <option value="">-- Select Section --</option>
                                    <option value="WhatWeDo" selected="@(Model.DivSlug == "WhatWeDo")">What We Do</option>
                                    <option value="OurStrength" selected="@(Model.DivSlug == "OurStrength")">Our Strength</option>
                                    <option value="HardwareRepairs" selected="@(Model.DivSlug == "HardwareRepairs")">Hardware Repairs</option>
                                    <option value="EmpoweringBusinesses" selected="@(Model.DivSlug == "EmpoweringBusinesses")">Empowering Businesses</option>
                                </select>
                            </div>
                        </div>

                        <!-- Editor -->
                        <div class="mb-4">
                            <label class="form-label fw-semibold">Content</label>
                            <div id="editor"></div>
                            <input type="hidden" id="Content" name="Content" />
                        </div>

                        <!-- Buttons -->
                        <div class="d-flex gap-2">
                            <button type="submit" class="btn btn-primary px-4">
                                Update
                            </button>
                            <a href="/PrivateCMS/CustomCMSPage" class="btn btn-outline-secondary px-4">
                                Cancel
                            </a>
                        </div>

                    </form>
                </div>

            </div>
        </div>
    </div>

    <!-- Bootstrap JS -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>

    <!-- Quill JS -->
    <script src="https://cdn.quilljs.com/1.3.6/quill.js"></script>

    <script>
        var quill = new Quill('#editor', {
            theme: 'snow',
            modules: {
                toolbar: [
                    [{ 'font': [] }, { 'size': [] }],
                    ['bold', 'italic', 'underline', 'strike'],
                    [{ 'color': [] }, { 'background': [] }],
                    [{ 'list': 'ordered' }, { 'list': 'bullet' }],
                    ['link', 'image'],
                    ['clean']
                ]
            }
        });

        quill.root.innerHTML = `@Html.Raw(Model.Content)`;

        document.querySelector("form").addEventListener("submit", function () {
            document.getElementById("Content").value = quill.root.innerHTML;
        });
    </script>

</body>
</html>
