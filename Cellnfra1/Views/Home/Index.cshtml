    /* Top Navigation */
    .tabs {
        display: flex;
        justify-content: center;
        gap: 30px;
        border-bottom: 2px solid #d1d1d1;
        padding: 15px 0;
    }

    .tab {
        font-size: 18px;
        font-weight: 500;
        color: #777;
        cursor: pointer;
        position: relative;
        transition: color 0.3s;
    }

        .tab.active {
            color: #1b2a57;
            font-weight: bold;
        }

            .tab.active::after {
                content: "";
                position: absolute;
                bottom: -16px;
                left: 0;
                right: 0;
                height: 3px;
                background: #1b2a57;
                border-radius: 2px;
            }

    /* Content Section */
    .tab-content {
        max-width: 900px;
        margin: 40px auto;
        padding: 20px;
        display: none;
        opacity: 0;
        transform: translateY(15px);
        transition: opacity 0.6s ease, transform 0.6s ease;
    }

        .tab-content.active {
            display: block;
            opacity: 1;
            transform: translateY(0);
        }

        .tab-content h2 {
            font-size: 28px;
            margin-bottom: 15px;
            color: #1b2a57;
        }

        .tab-content p {
            line-height: 1.6;
            margin-bottom: 15px;
        }

    .cta {
        display: inline-block;
        padding: 10px 18px;
        border: 1.5px solid #7ac943;
        border-radius: 6px;
        color: #2b2b2b;
        font-size: 15px;
        text-decoration: none;
        margin-top: 10px;
        transition: background 0.3s;
    }

        .cta:hover {
            background: #7ac943;
            color: #fff;
        }


    #carouselExampleAutoplaying .carousel-item img {
        height: 150px; /* 👈 set a fixed height for all images */
        object-fit: contain; /* ensures image is not distorted */
    }

    /* Keep carousel itself stable */
    #carouselExampleAutoplaying .carousel-inner {
        min-height: 180px; /* slightly more than image height */
        display: flex;
        align-items: center;
    }


    @@media (max-width: 426px) {
