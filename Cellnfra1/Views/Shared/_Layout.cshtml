    <script>
        document.addEventListener('DOMContentLoaded', function() {
            // Only apply click toggle on screens < 1024px
            function handleDropdownToggle() {
                if (window.innerWidth < 1024) {
                    const dropdownLinks = document.querySelectorAll('.dropdown > .nav-link');

                    dropdownLinks.forEach(link => {
                        link.addEventListener('click', function(e) {
                            e.preventDefault();

                            // Find the simple-dropdown within the same parent dropdown
                            const parentDropdown = this.parentElement;
                            const dropdown = parentDropdown.querySelector('.simple-dropdown');

                            // Check if dropdown exists before proceeding
                            if (dropdown) {
                                const isOpen = dropdown.classList.contains('show');

                                // Close all other dropdowns
                                document.querySelectorAll('.simple-dropdown.show').forEach(dd => {
                                    dd.classList.remove('show');
                                });

                                // Toggle current dropdown
                                if (!isOpen) {
                                    dropdown.classList.add('show');
                                }
                            }
                        });
                    });

                    // Close dropdown when clicking outside
                    document.addEventListener('click', function(e) {
                        if (!e.target.closest('.dropdown')) {
                            document.querySelectorAll('.simple-dropdown.show').forEach(dd => {
                                dd.classList.remove('show');
                            });
                        }
                    });
                }
            }

            // Initialize and handle window resize
            handleDropdownToggle();
            window.addEventListener('resize', function() {
                // Remove existing event listeners and re-initialize
                handleDropdownToggle();
            });
        });
    </script>
